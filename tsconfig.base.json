{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@db": ["libs/db/src/index.ts"],
      "@api/controller/*": ["apps/api/src/controller/*"],
      "@api/middleware/*": ["apps/api/src/middleware/*"],
      "@api/router/*": ["apps/api/src/router/*"],
      "@api/util/*": ["apps/api/src/util/*"],
      "@browser/actions/*": ["apps/browser/src/state/actions/*"],
      "@browser/components/*": ["apps/browser/src/components/*"],
      "@browser/hooks/*": ["apps/browser/src/hooks/*"],
      "@browser/reducers/*": ["apps/browser/src/state/reducers/*"],
      "@browser/state/*": ["apps/browser/src/state/*"],
      "@browser/pages/*": ["apps/browser/src/pages/*"],
      "@browser/styles/*": ["apps/browser/src/styles/*"],
      "@browser/util/*": ["apps/browser/src/util/*"],
      "@cdn/config/*": ["apps/cdn/src/config/*"],
      "@cdn/controller/*": ["apps/cdn/src/controller/*"],
      "@cdn/middleware/*": ["apps/cdn/src/middleware/*"],
      "@cdn/router/*": ["apps/cdn/src/router/*"],
      "@cdn/util/*": ["apps/cdn/src/util/*"],
      "@web/actions/*": ["apps/web/state/actions/*"],
      "@web/components/*": ["apps/web/components/*"],
      "@web/hooks/*": ["apps/web/hooks/*"],
      "@web/registry": ["apps/web/state/registry.ts"],
      "@web/state": ["apps/web/state/index.ts"],
      "@web/styles/*": ["apps/web/styles/*"],
      "@web/util/*": ["apps/web/util/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
